@model Order

@{
    ViewData["Title"] = "Skapa";
}

<h1>Enter order:</h1>

<form asp-action="Create">
    <div class="form-horizontal">
        
        <hr />
        <!-- Detta är fältet där du kan skriva in products KundID -->
        <div class="form-group">
            <label asp-for="KundId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="KundId" class="form-control" />
                <span asp-validation-for="KundId" class="text-danger"></span>
            </div>
        </div>    
        
        <!-- Detta är fältet där du kan skiva datum -->
        <div class="form-group">
            <label asp-for="Datum" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
        </div>

        <!-- Detta är fältet där du kan välja lista för ordrar/varor -->
        <div class="form-group">
            <label asp-for="Varor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Varor" class="form-control" />
                <span asp-validation-for="Varor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skapa" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@model IEnumerable<ASPNetMongoDB.Models.Product>

@{
    ViewData["Title"] = "Mirandas Maffiga Magiska Marknad!"; //alliteratioooonn
}

<h1>PRODUCTS</h1>

<p>
    <a asp-action="Create">Skapa ny</a>
</p>
<table id="prutto" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                <!-- Detta är namnet på katten -->
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <!-- Detta är färgen på katten -->
                @Html.DisplayNameFor(model => model.Antal)
            </th>
            <th>
                <!-- Detta är färgen på katten -->
                @Html.DisplayNameFor(model => model.Pris)
            </th>
            <th>
                Tools and stuffies for eric
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pris)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Info</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#prutto').DataTable();
    });
</script>
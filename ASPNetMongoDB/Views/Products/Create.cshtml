@model Product

@{
    ViewData["Title"] = "Skapa";
}

<h1>Enter products in shop:</h1>

<form asp-action="Create">
    <div class="form-horizontal">
        
        <hr />
        <!-- Detta är fältet där du kan skriva in products namn -->
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>    
        
        <!-- Detta är fältet där du kan skriva antal i lager -->
        <div class="form-group">
            <label asp-for="Antal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Antal" class="form-control" />
                <span asp-validation-for="Antal" class="text-danger"></span>
            </div>
        </div>

        <!-- Detta är fältet där du kan välja priset på produkt -->
        <div class="form-group">
            <label asp-for="Pris" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Pris" class="form-control" />
                <span asp-validation-for="Pris" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skapa" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

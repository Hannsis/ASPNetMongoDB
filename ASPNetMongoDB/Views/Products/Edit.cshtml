@model Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <!-- Detta är fältet där du kan ändra produkters pris, namn och antal  -->
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Antal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Antal" class="form-control" />
                <span asp-validation-for="Antal" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Pris" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Pris" class="form-control" />
                <span asp-validation-for="Pris" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>
